{
  "name": "wps-office",
  "version": "1.0.1",
  "description": "WPS Office自动化操作Skill - 支持文档创建、编辑、格式转换、批量处理等功能",
  "author": "MaxStorm Team",
  "license": "MIT",
  "homepage": "https://github.com/maxstorm/wps-skill",
  "keywords": ["wps", "office", "document", "excel", "word", "pdf", "文档"],
  "trigger": {
    "patterns": [
      "wps",
      "文档",
      "表格",
      "excel",
      "word",
      "pdf转换",
      "创建文档",
      "编辑文档",
      "智能表单",
      "智能文档",
      "多维表格",
      "流程图",
      "思维导图",
      "md转word"
    ]
  },
  "tools": ["exec"],
  "entry": "scripts/main.py",
  "config": {
    "schema": {
      "default_save_path": {
        "type": "string",
        "description": "默认文档保存路径",
        "default": "~/Documents/WPS"
      },
      "wps_path": {
        "type": "string",
        "description": "WPS安装路径（可选，自动检测）",
        "default": ""
      },
      "app_id": {
        "type": "string",
        "description": "WPS开放平台App ID（可选，用于WPS 365功能）",
        "default": ""
      },
      "app_secret": {
        "type": "string",
        "description": "WPS开放平台App Secret（可选，用于WPS 365功能）",
        "default": "",
        "secret": true
      }
    }
  },
  "dependencies": {
    "python": ">=3.8",
    "packages": [
      "pyautogui",
      "pyperclip",
      "Pillow"
    ]
  },
  "platforms": ["darwin", "linux", "win32"]
}
