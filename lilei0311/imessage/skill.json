{
  "name": "imessage",
  "version": "1.0.2",
  "description": "iMessage Skill - 通过 AppleScript 和 Messages 数据库实现 iMessage 消息的发送、接收和管理",
  "author": "MaxStorm Team",
  "license": "MIT",
  "homepage": "https://github.com/maxstorm/imessage-skill",
  "keywords": ["imessage", "messages", "macos", "apple", "sms", "messaging"],
  "trigger": {
    "patterns": [
      "发送iMessage",
      "iMessage",
      "发短信",
      "发消息",
      "send imessage",
      "send message",
      "查看消息",
      "最近消息"
    ]
  },
  "tools": ["exec"],
  "entry": "scripts/main.py",
  "config": {
    "schema": {}
  },
  "dependencies": {
    "python": ">=3.8",
    "packages": [],
    "system": ["macOS", "osascript", "Messages.app"]
  },
  "platforms": ["darwin"],
  "notes": "仅支持 macOS 系统，需要授予 Messages 和 终端 辅助功能权限"
}
