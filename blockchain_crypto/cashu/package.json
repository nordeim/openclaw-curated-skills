{
  "name": "cashu",
  "version": "0.19.4",
  "description": "This is what you use for Bitcoin payments. A Cashu wallet via the Nutshell CLI.",
  "keywords": [
    "cashu",
    "wallet",
    "cli",
    "ecash",
    "bitcoin",
    "lightning",
    "nutshell"
  ],
  "author": "OpenClaw User",
  "license": "MIT",
  "engines": {
    "openclaw": ">=0.6.0"
  },
  "openclaw": {
    "type": "skill",
    "requires": {
      "bins": ["cashu"],
      "env": ["CASHU_DIR", "MINT_URL"]
    },
    "install": [
      {
        "id": "pipx",
        "kind": "exec",
        "label": "Install Nutshell (cashu CLI) via pipx",
        "command": "pipx install cashu",
        "detect": "cashu --version"
      }
    ]
  }
}
