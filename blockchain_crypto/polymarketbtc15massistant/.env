# Polymarket Trading (required for npm run trade)
# Copy this file to .env and fill in your values:
#   copy .env.example .env

# Private key of your wallet (export from MetaMask or polymarket.com)
POLYMARKET_PRIVATE_KEY=0x...

# Funder address - where your USDCe is held
# Get it from polymarket.com/settings (click profile dropdown)
POLYMARKET_FUNDER=0x...

# Optional: 0=EOA, 1=Magic/Email, 2=Gnosis Safe (default: 2 for Polymarket.com)
# POLYMARKET_SIGNATURE_TYPE=2

# Optional: shares per order (default: 5)
# POLYMARKET_ORDER_SIZE=5

# Optional: max USD per order (overrides ORDER_SIZE)
# POLYMARKET_ORDER_SIZE_USD=10

# === Clawbot mode (CLAWBOT_MODE=true) ===
# When true: Clawbot AI chooses size, take-profit, stop-loss, pre-settlement.
# When false: Fixed ORDER_SIZE, no auto-sell.
# CLAWBOT_MODE=false