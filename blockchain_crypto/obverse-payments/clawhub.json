{
    "name": "obverse-payments",
    "displayName": "Obverse Payments",
    "version": "1.0.0",
    "description": "Complete stablecoin payment solution for AI agents - invoices, products, and crowdfunding on Solana/Monad",
    "author": {
        "name": "Obverse Team",
        "email": "obverse.ccc@gmail.com",
        "url": "https://obverse.cc"
    },
    "repository": "https://github.com/obverse/openclaw-skill",
    "homepage": "https://obverse.cc",
    "license": "MIT",
    "category": "payments",
    "tags": [
        "payments",
        "crypto",
        "usdc",
        "base",
        "monad",
        "solana",
        "web3"
    ],
    "platforms": [
        "telegram",
        "whatsapp",
        "discord",
        "signal"
    ],
    "requires": {
        "openclaw": ">=1.0.0",
        "bins": [
            "curl",
            "jq"
        ]
    },
    "setup": {
        "requiresApiKey": true,
        "apiKeyUrl": "https://obverse.onrender.com/api-keys/register",
        "envVars": {
            "OBVERSE_API_KEY": {
                "required": true,
                "description": "Your Obverse API key. Register programmatically: curl -X POST https://obverse.onrender.com/api-keys/register -H 'Content-Type: application/json' -d '{\"username\": \"your-agent-name\"}'"
            },
            "OBVERSE_API_URL": {
                "required": false,
                "default": "https://obverse.onrender.com",
                "description": "Obverse API base URL"
            }
        }
    }
}