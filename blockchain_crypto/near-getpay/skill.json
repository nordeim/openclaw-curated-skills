{
  "name": "near-getpay",
  "version": "1.0.0",
  "description": "Accept crypto payments (NEAR, USDC, USDT) via beautiful payment pages with PingPay or HOT PAY integration",
  "author": "OpenClaw Community",
  "license": "MIT",
  "main": "index.ts",
  "type": "skill",
  "tags": [
    "near",
    "payments",
    "crypto",
    "pingpay",
    "hotpay",
    "usdc",
    "usdt",
    "donations",
    "web3"
  ],
  "requirements": {
    "node": ">=16.0.0",
    "packages": [
      "express",
      "axios",
      "dotenv",
      "typescript",
      "ts-node"
    ]
  },
  "setup": {
    "steps": [
      "Copy .env.example to .env",
      "Choose payment provider (PingPay or HOT PAY)",
      "Configure provider credentials in .env",
      "Run: ./start.sh"
    ],
    "wizardUrl": "/setup"
  },
  "features": [
    "Beautiful mobile-responsive payment UI",
    "Multi-token support (NEAR, USDC, USDT)",
    "Dual provider (PingPay + HOT PAY)",
    "Automatic public URL generation",
    "First-time setup wizard",
    "Webhook integration (HOT PAY)",
    "Customizable preset amounts"
  ],
  "documentation": {
    "main": "SKILL.md",
    "readme": "README.md",
    "examples": "SKILL.md#usage-in-openclaw"
  },
  "environment": {
    "required": [
      "RECIPIENT_ADDRESS",
      "PAYMENT_PROVIDER"
    ],
    "optional": [
      "PORT",
      "PINGPAY_API_KEY",
      "PINGPAY_BASE_URL",
      "HOTPAY_NEAR_ITEM_ID",
      "HOTPAY_USDC_ITEM_ID",
      "HOTPAY_USDT_ITEM_ID"
    ]
  },
  "commands": {
    "start": "./start.sh",
    "dev": "npx ts-node server-simple.ts",
    "install": "npm install"
  }
}
