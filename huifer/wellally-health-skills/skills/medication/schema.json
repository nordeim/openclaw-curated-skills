{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://wellallyhealth.com/schemas/medications.json",
  "title": "MedicationRecord",
  "description": "Data structure definition for medication records",
  "type": "object",
  "properties": {
    "id": {
      "type": "string",
      "description": "Unique identifier"
    },
    "name": {
      "type": "string",
      "description": "Medication name"
    },
    "generic_name": {
      "type": "string",
      "description": "Generic name"
    },
    "dosage": {
      "type": "object",
      "properties": {
        "value": {"type": "number"},
        "unit": {
          "type": "string",
          "enum": ["mg", "g", "ml", "IU", "mcg", "tablets", "pills", "packets", "vials", "drops"]
        }
      }
    },
    "frequency": {
      "type": "object",
      "properties": {
        "type": {
          "type": "string",
          "enum": ["daily", "weekly", "every_other_day", "as_needed"]
        },
        "times_per_day": {"type": "integer"},
        "interval_days": {"type": "integer"}
      }
    },
    "schedule": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "weekday": {"type": "integer", "minimum": 1, "maximum": 7},
          "time": {"type": "string", "pattern": "^([0-1]?[0-9]|2[0-3]):[0-5][0-9]$"},
          "timing_label": {"type": "string"},
          "dose": {
            "type": "object",
            "properties": {
              "value": {"type": "number"},
              "unit": {"type": "string"}
            }
          }
        }
      }
    },
    "instructions": {
      "type": "string",
      "description": "Medication instructions"
    },
    "active": {
      "type": "boolean",
      "description": "Whether active"
    },
    "warnings": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "type": {"type": "string"},
          "severity": {"type": "string"},
          "description": {"type": "string"}
        }
      }
    }
  }
}
