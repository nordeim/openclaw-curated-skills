{
  "name": "lynqn",
  "version": "1.0.0",
  "description": "LYNQN - Share text, generate QR codes, and shorten URLs instantly",
  "author": "LYNQN",
  "category": "productivity",
  "tags": ["sharing", "qr", "url-shortener", "text", "productivity"],
  "repository": "https://github.com/lynqn/lynqn-openclaw-skill",
  "homepage": "https://lynqn.io",
  "commands": [
    {
      "name": "share",
      "description": "Create a shareable text or code snippet",
      "usage": "/lynqn share <text> [--syntax] [--expires 1d|1w|1m|3m]",
      "examples": [
        "/lynqn share Hello world!",
        "/lynqn share const x = 5; --syntax --expires 1w"
      ]
    },
    {
      "name": "qr",
      "description": "Generate a QR code from text or URL",
      "usage": "/lynqn qr <content> [--size 200-800] [--error L|M|Q|H]",
      "examples": [
        "/lynqn qr https://example.com",
        "/lynqn qr Wi-Fi Password: 12345 --size 400"
      ]
    },
    {
      "name": "shorten",
      "description": "Shorten a long URL",
      "usage": "/lynqn shorten <url>",
      "examples": [
        "/lynqn shorten https://example.com/very/long/path/here"
      ]
    },
    {
      "name": "stats",
      "description": "Get LYNQN platform statistics",
      "usage": "/lynqn stats",
      "examples": ["/lynqn stats"]
    }
  ],
  "config": {
    "apiEndpoint": "https://lynqn.io/api",
    "requiresAuth": false,
    "rateLimit": {
      "requests": 100,
      "period": "1h"
    }
  },
  "permissions": [
    "network.http"
  ]
}
