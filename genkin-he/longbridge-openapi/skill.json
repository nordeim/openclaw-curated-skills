{
  "name": "longbridge",
  "version": "1.0.0",
  "title": "Longbridge OpenAPI",
  "description": "Longbridge 长桥证券 OpenAPI SDK，支持港美股、期权交易，实时行情订阅和账户管理",
  "author": "genkin",
  "license": "MIT",
  "tags": ["trading", "stocks", "finance", "market-data", "longbridge"],
  "runtime": {
    "type": "python",
    "packages": ["longbridge>=0.2.77"]
  },
  "tools": [
    {
      "name": "quote_subscribe",
      "description": "订阅实时行情数据（港股、美股、A股）",
      "parameters": {
        "type": "object",
        "properties": {
          "symbols": {
            "type": "array",
            "items": {
              "type": "string"
            },
            "description": "股票代码列表，例如：['700.HK', 'AAPL.US', '000001.SH']"
          },
          "sub_types": {
            "type": "array",
            "items": {
              "type": "string",
              "enum": ["quote", "depth", "brokers", "trade"]
            },
            "description": "订阅类型：quote-报价, depth-盘口, brokers-经纪队列, trade-逐笔成交"
          }
        },
        "required": ["symbols", "sub_types"]
      }
    },
    {
      "name": "get_realtime_quote",
      "description": "获取实时股票报价信息",
      "parameters": {
        "type": "object",
        "properties": {
          "symbols": {
            "type": "array",
            "items": {
              "type": "string"
            },
            "description": "股票代码列表"
          }
        },
        "required": ["symbols"]
      }
    },
    {
      "name": "get_static_info",
      "description": "获取股票静态信息（名称、交易所、货币等）",
      "parameters": {
        "type": "object",
        "properties": {
          "symbols": {
            "type": "array",
            "items": {
              "type": "string"
            },
            "description": "股票代码列表"
          }
        },
        "required": ["symbols"]
      }
    },
    {
      "name": "submit_order",
      "description": "提交交易订单（限价单、市价单）",
      "parameters": {
        "type": "object",
        "properties": {
          "symbol": {
            "type": "string",
            "description": "股票代码"
          },
          "order_type": {
            "type": "string",
            "enum": ["LO", "MO", "ELO", "ALO", "ODD", "LIT", "MIT", "TSLPAMT", "TSLPPCT"],
            "description": "订单类型：LO-限价单, MO-市价单, ELO-增强限价单等"
          },
          "side": {
            "type": "string",
            "enum": ["Buy", "Sell"],
            "description": "买卖方向"
          },
          "quantity": {
            "type": "integer",
            "description": "订单数量"
          },
          "price": {
            "type": "number",
            "description": "价格（市价单可选）"
          },
          "time_in_force": {
            "type": "string",
            "enum": ["Day", "GTC", "GTD"],
            "description": "订单有效期：Day-当日有效, GTC-撤单前有效, GTD-指定日期前有效"
          },
          "remark": {
            "type": "string",
            "description": "订单备注"
          }
        },
        "required": ["symbol", "order_type", "side", "quantity", "time_in_force"]
      }
    },
    {
      "name": "cancel_order",
      "description": "撤销订单",
      "parameters": {
        "type": "object",
        "properties": {
          "order_id": {
            "type": "string",
            "description": "订单 ID"
          }
        },
        "required": ["order_id"]
      }
    },
    {
      "name": "get_today_orders",
      "description": "获取当日订单列表",
      "parameters": {
        "type": "object",
        "properties": {
          "symbol": {
            "type": "string",
            "description": "股票代码（可选，不填则返回所有订单）"
          },
          "status": {
            "type": "array",
            "items": {
              "type": "string"
            },
            "description": "订单状态过滤"
          }
        }
      }
    },
    {
      "name": "get_history_orders",
      "description": "获取历史订单",
      "parameters": {
        "type": "object",
        "properties": {
          "symbol": {
            "type": "string",
            "description": "股票代码"
          },
          "start_date": {
            "type": "string",
            "description": "开始日期 (YYYY-MM-DD)"
          },
          "end_date": {
            "type": "string",
            "description": "结束日期 (YYYY-MM-DD)"
          }
        },
        "required": ["start_date", "end_date"]
      }
    },
    {
      "name": "get_account_balance",
      "description": "获取账户资金余额",
      "parameters": {
        "type": "object",
        "properties": {
          "currency": {
            "type": "string",
            "description": "货币类型（可选）"
          }
        }
      }
    },
    {
      "name": "get_stock_positions",
      "description": "获取持仓列表",
      "parameters": {
        "type": "object",
        "properties": {
          "symbol": {
            "type": "string",
            "description": "股票代码（可选，不填则返回所有持仓）"
          }
        }
      }
    },
    {
      "name": "get_candlesticks",
      "description": "获取历史K线数据",
      "parameters": {
        "type": "object",
        "properties": {
          "symbol": {
            "type": "string",
            "description": "股票代码"
          },
          "period": {
            "type": "string",
            "enum": ["1m", "5m", "15m", "30m", "60m", "day", "week", "month", "year"],
            "description": "K线周期"
          },
          "count": {
            "type": "integer",
            "description": "获取数量"
          },
          "adjust_type": {
            "type": "string",
            "enum": ["NoAdjust", "ForwardAdjust"],
            "description": "复权类型"
          }
        },
        "required": ["symbol", "period", "count"]
      }
    }
  ],
  "userInvocable": true
}
