{
  "jobs": [
    {
      "name": "daily-cost-report",
      "description": "每日发送 OpenClaw 费用报告到 Discord",
      "schedule": {
        "kind": "cron",
        "expr": "20 8 * * *",
        "tz": "Asia/Shanghai"
      },
      "sessionTarget": "isolated",
      "payload": {
        "kind": "agentTurn",
        "message": "生成今日 OpenClaw 费用报告并发送到 #dailyreport 频道。使用 openclaw-cost-tracker 技能，显示昨日费用和本周累计。",
        "model": "openai/gpt-4o-mini",
        "timeoutSeconds": 120,
        "deliver": true,
        "channel": "discord",
        "to": "dailyreport"
      },
      "enabled": true
    },
    {
      "name": "weekly-cost-report",
      "description": "每周一发送 OpenClaw 周费用报告到 Discord",
      "schedule": {
        "kind": "cron",
        "expr": "30 9 * * 1",
        "tz": "Asia/Shanghai"
      },
      "sessionTarget": "isolated",
      "payload": {
        "kind": "agentTurn",
        "message": "生成 OpenClaw 上周费用报告并发送到 #dailyreport 频道。使用 openclaw-cost-tracker 技能，--week 参数显示详细模型使用情况。",
        "model": "openai/gpt-4o-mini",
        "timeoutSeconds": 120,
        "deliver": true,
        "channel": "discord", 
        "to": "dailyreport"
      },
      "enabled": true
    }
  ]
}