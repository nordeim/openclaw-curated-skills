  },
  "routing_rules": [
    {
      "condition": "confidence > 0.85",
      "action": "auto_route",
      "description": "High confidence - immediately route to assigned specialist"
    },
    {
      "condition": "0.7 <= confidence <= 0.85",
      "action": "propose_with_confirm",
      "description": "Good confidence - propose routing with option to override"
    },
    {
      "condition": "0.5 <= confidence < 0.7",
      "action": "offer_alternatives",
      "description": "Moderate confidence - show top 2-3 alternatives"
    },
    {
      "condition": "confidence < 0.5",
      "action": "request_clarification",
      "description": "Low confidence - ask user for more task details"
    }
  ],
  "example_commands": [
    {
      "description": "Route a mixed task",
      "command": "claw agent-orchestrator route --task 'Write a Python script to analyze CSV data and generate a report' --specialists coder,researcher,writer,analyst"
    },
    {
      "description": "Force route to specific specialist",
      "command": "claw agent-orchestrator route --task 'Debug this code' --force coder"
    },
    {
      "description": "Low confidence threshold for testing",
      "command": "claw agent-orchestrator route --task 'Something with data' --specialists coder,data,analyst --confidence-threshold 0.4"
    },
    {
      "description": "Output as JSON for programmatic use",
      "command": "claw agent-orchestrator route --task $TASK --format json"
    }
  ],
  "test_cases": [
    {
      "task": "Write a Python function to parse JSON",
      "expected_specialist": "coder",
      "expected_confidence": "> 0.8"
    },
    {
      "task": "Research the history of Bitcoin",
      "expected_specialist": "researcher",
      "expected_confidence": "> 0.8"
    },
    {
      "task": "Draft a blog post about AI agents",
      "expected_specialist": "writer",
      "expected_confidence": "> 0.8"
    },
    {
      "task": "Analyze the sales data and identify trends",
      "expected_specialist": "analyst",
      "expected_confidence": "> 0.8"
    },
    {
      "task": "Something with code and writing",
      "expected_specialist": "coder",
      "expected_confidence": 0.4,
      "expected_alternatives": ["writer"],
      "needs_clarification": true
    }
  ],
  "implementation_notes": {
    "classifier_approach": "Keyword matching + heuristic scoring for MVP, LLM-based for production",
    "confidence_calculation": "Based on keyword match score and margin to next best specialist",
    "fallback_strategy": "Return needs_clarification when below threshold, never force low-confidence routes",
    "extension_points": [
      "Add custom specialists by extending SpecialistConfig",
      "Implement learning from routing feedback",
      "Add batch routing for efficiency",
      "Support routing chains (multi-hop)"
    ]
  }
}
