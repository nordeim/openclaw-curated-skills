{
  "name": "Mixed Workload Task Router",
  "description": "Example configuration for auto-routing mixed task types to appropriate specialists",
  "version": "1.0.0",
  "router_config": {
    "confidence_threshold": 0.7,
    "default_specialists": [
      "coder",
      "researcher",
      "writer",
      "analyst"
    ],
    "fallback_action": "needs_clarification"
  },
