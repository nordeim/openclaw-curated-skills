{
  "memory_continuity": {
    "version": "1.0.0",
    "search_threshold": 0.7,
    "max_search_results": 10,
    "daily_memory_enabled": true,
    "auto_sync_enabled": true,
    "sync_interval_hours": 6,
    "archival": {
      "enabled": true,
      "archive_after_days": 30,
      "retention_months": 12
    },
    "red_flags": [
      "we discussed this",
      "you said earlier",
      "remember when",
      "we already covered",
      "I told you before",
      "as we talked about"
    ],
    "search_patterns": [
      "project meetings",
      "decisions made", 
      "ongoing tasks",
      "user preferences",
      "previous conversations",
      "important context"
    ],
    "logging": {
      "level": "info",
      "log_searches": true,
      "log_continuity_breaks": true,
      "log_recovery_attempts": true
    }
  },
  "cron_jobs": {
    "memory_sync": {
      "enabled": true,
      "schedule": "0 */6 * * *",
      "timezone": "UTC"
    },
    "daily_memory_creation": {
      "enabled": true, 
      "schedule": "0 0 * * *",
      "timezone": "UTC"
    },
    "weekly_archival": {
      "enabled": true,
      "schedule": "0 2 * * 0", 
      "timezone": "UTC"
    }
  }
}