    "version": "1.0.0",
    "description": "Play LunchTable-TCG, a Yu-Gi-Oh-inspired online trading card game with AI agents. Battle opponents with strategic card gameplay featuring monsters, spells, and traps.",
    "author": {
      "name": "LunchTable Team",
      "url": "https://lunchtable.cards"
    },
    "license": "MIT",
    "homepage": "https://lunchtable.cards",
    "repository": {
      "type": "git",
      "url": "https://github.com/lunchtable/ltcg",
      "directory": "skills/lunchtable/lunchtable-tcg"
    },
    "documentation": "https://github.com/lunchtable/ltcg/tree/main/skills/lunchtable/lunchtable-tcg",
