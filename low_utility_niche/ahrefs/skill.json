{
  "name": "ahrefs",
  "version": "1.2.0",
  "title": "Ahrefs Complete SEO Suite",
  "description": "Complete Ahrefs API integration: Site Explorer (domains, backlinks), Keywords Explorer (search volume, SERP analysis), Rank Tracker (position monitoring), Site Audit (technical SEO), Batch Analysis (bulk processing), and Brand Radar (mention tracking). Full-featured SEO analysis for all Ahrefs plans.",
  "author": "OpenClaw Community",
  "license": "MIT",
  "tags": ["seo", "backlinks", "keywords", "analytics", "ahrefs", "marketing", "rank-tracking", "technical-seo", "brand-monitoring", "serp-analysis"],
  "category": "marketing",
  "requirements": {
    "openclaw": ">=0.1.0",
    "ahrefs_subscription": "any",
    "api_access": true
  },
  "config": {
    "env": [
      {
        "key": "AHREFS_API_TOKEN",
        "required": true,
        "description": "Your Ahrefs API token from https://ahrefs.com/api",
        "type": "string"
      },
      {
        "key": "AHREFS_API_PLAN",
        "required": true,
        "description": "Your Ahrefs plan tier",
        "type": "string",
        "default": "lite",
        "options": ["lite", "standard", "advanced", "enterprise"]
      }
    ]
  },
  "capabilities": {
    "basic": [
      "Domain Rating & Ahrefs Rank",
      "Backlinks count (total live/historical)",
      "Organic keywords count",
      "Organic traffic estimates",
      "Keywords in positions 1-3"
    ],
    "standard": [
      "All basic features",
      "Organic keywords list (all positions)",
      "Referring domains list",
      "Top pages by traffic"
    ],
    "advanced": [
      "All standard features",
      "Position filtering (e.g., first-page keywords)",
      "Geographic filtering (e.g., .au backlinks)",
      "Large dataset queries (5000+ records)",
      "Detailed metrics access"
    ],
    "enterprise": [
      "All advanced features",
      "Highest rate limits",
      "Priority support",
      "Full API access"
    ]
  },
  "files": {
    "main": "SKILL.md",
    "readme": "README.md",
    "install": "INSTALL.md",
    "changelog": "CHANGELOG.md",
    "scripts": [
      "scripts/ahrefs-query.ps1",
      "scripts/ahrefs-compare-filtered.ps1"
    ],
    "references": [
      "references/api-endpoints.md",
      "references/quick-reference.md"
    ]
  },
  "links": {
    "homepage": "https://clawhub.com/skills/ahrefs",
    "documentation": "https://ahrefs.com/api/documentation",
    "support": "https://discord.gg/clawd"
  }
}
