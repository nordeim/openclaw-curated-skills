{
  "name": "Terminal UI Design System",
  "version": "1.0.0",
  "description": "Complete design tokens for terminal-inspired UI interface",
  
  "colors": {
    "primary": {
      "value": "#cc7a60",
      "description": "Warm terracotta - main brand color",
      "variants": {
        "dark": "#b56850",
        "light": "#d8907a",
        "foreground": "#ffffff"
      }
    },
    "semantic": {
      "background": {
        "main": "#f8f8f8",
        "card": "#ffffff",
        "code": "#fafafa",
        "secondary": "#f9fafb",
        "muted": "#f3f4f6"
      },
      "foreground": {
        "primary": "#111827",
        "secondary": "#666666",
        "muted": "#5b6370"
      },
      "border": {
        "default": "#8b929e",
        "light": "#e5e7eb"
      },
      "status": {
        "success": "#22c55e",
        "warning": "#f59e0b",
        "danger": "#ef4444"
      }
    },
    "syntax": {
      "keyword": "#cc7a60",
      "string": "#22c55e",
      "number": "#cc7a60",
      "comment": "#6a9955",
      "function": "#dcdcaa",
      "blue": "#3b82f6"
    },
    "special": {
      "cmdPrefix": "#39ff14",
      "warmRed": "#c85a3f"
    },
    "macOS": {
      "dotRed": "#ff5f57",
      "dotYellow": "#febc2e",
      "dotGreen": "#28c840"
    }
  },
  
  "typography": {
    "fontFamily": {
      "mono": "\"JetBrains Mono\", \"JetBrains Mono Fallback\", 'Fira Code', 'Consolas', monospace",
      "sans": "ui-sans-serif, system-ui, sans-serif"
    },
    "fontSize": {
      "xs": "0.75rem",
      "sm": "0.875rem",
      "base": "1rem",
      "lg": "1.125rem",
      "xl": "1.25rem",
      "2xl": "1.5rem",
      "3xl": "1.875rem",
      "4xl": "2.25rem",
      "5xl": "3rem",
      "6xl": "3.75rem"
    },
    "fontWeight": {
      "normal": 400,
      "medium": 500,
      "semibold": 600,
      "bold": 700,
      "extrabold": 800
    },
    "lineHeight": {
      "tight": 1.25,
      "relaxed": 1.625
    }
  },
  
  "spacing": {
    "base": "0.25rem",
    "xs": "4px",
    "sm": "8px",
    "md": "16px",
    "lg": "24px",
    "xl": "32px",
    "2xl": "48px"
  },
  
  "borderRadius": {
    "xs": "0.125rem",
    "sm": "0.25rem",
    "md": "0.375rem",
    "lg": "0.5rem",
    "xl": "0.75rem",
    "2xl": "1rem",
    "default": "0.625rem",
    "full": "9999px"
  },
  
  "shadows": {
    "sm": "0 1px 2px rgba(0,0,0,0.05)",
    "md": "0 4px 6px rgba(0,0,0,0.07)",
    "lg": "0 10px 25px rgba(0,0,0,0.1)",
    "primary": "0 20px 25px -5px rgba(204, 122, 96, 0.1), 0 10px 10px -5px rgba(204, 122, 96, 0.04)"
  },
  
  "animations": {
    "duration": {
      "fast": "0.15s",
      "default": "0.2s",
      "slow": "0.3s"
    },
    "easing": {
      "easeOut": "cubic-bezier(0,0,.2,1)",
      "easeInOut": "cubic-bezier(.4,0,.2,1)"
    }
  },
  
  "breakpoints": {
    "mobile": "640px",
    "tablet": "1024px",
    "desktop": "1200px"
  },
  
  "components": {
    "terminalWindow": {
      "borderRadius": "0.5rem",
      "borderWidth": "1px",
      "borderColor": "#8b929e",
      "headerPadding": "8px 16px",
      "contentPadding": "24px",
      "shadow": "0 1px 2px rgba(0,0,0,0.05)"
    },
    "button": {
      "padding": "6px 12px",
      "borderRadius": "0.5rem",
      "fontSize": "0.75rem",
      "transition": "all 0.2s ease"
    },
    "card": {
      "borderRadius": "0.5rem",
      "padding": "16px",
      "borderWidth": "1px",
      "borderColor": "#8b929e"
    }
  }
}
