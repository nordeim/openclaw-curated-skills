{
  "skill_metadata": {
    "name": "vk-client-search-repetitor",
    "version": "1.0.0",
    "category": "Lead Generation"
  },
  "auth": {
    "vk_service_token": "PASTE_YOUR_TOKEN_HERE",
    "api_version": "5.131"
  },
  "monitoring_settings": {
    "check_interval_minutes": 180,
    "max_posts_per_group": 20,
    "target_groups": [
      "https://vk.com/clubXXXXXX",
      "https://vk.com/publicYYYYYY",
      "ЗАМЕНИТЕ_ЭТИ_ССЫЛКИ_НА_ВАШИ"
    ]
  },
  "filters": {
    "include_keywords": [
      "репетитор", 
      "математика", 
      "ищу преподавателя", 
      "нужен учитель", 
      "подготовка к егэ", 
      "огэ", 
      "помощь с уроками"
    ],
    "priority_online_keywords": [
      "онлайн", 
      "скайп", 
      "zoom", 
      "дистанционно", 
      "skype", 
      "зум"
    ],
    "exclude_keywords": [
      "предлагаю услуги", 
      "набираю учеников", 
      "записывайтесь на курс", 
      "вакансия", 
      "ищу работу"
    ]
  },
  "storage": {
    "format": "csv",
    "file_name": "vk_leads_math.csv",
    "columns": [
      "date", 
      "group_name", 
      "post_url", 
      "author", 
      "text", 
      "keywords", 
      "priority", 
      "status"
    ]
  }
}