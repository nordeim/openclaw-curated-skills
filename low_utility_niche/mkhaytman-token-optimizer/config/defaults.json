{
  "compression": {
    "enabled": true,
    "threshold": 0.85,
    "preserveRecentMessages": 20,
    "offloadToFiles": true
  },
  "models": {
    "autoSelect": true,
    "preferences": {
      "simple": "anthropic/claude-3-5-sonnet-latest",
      "balanced": "anthropic/claude-sonnet-4-20250514",
      "complex": "anthropic/claude-opus-4-6"
    }
  },
  "toolOptimization": {
    "caching": true,
    "deduplication": true,
    "truncation": true,
    "batchOperations": true,
    "largeOutputChars": 4000
  },
  "sessionManagement": {
    "autoCleanup": true,
    "resetThreshold": 0.95,
    "maxIdleMinutes": 30
  },
  "alerts": {
    "warnAt": 0.8,
    "urgentAt": 0.9,
    "notifyUser": true
  }
}
