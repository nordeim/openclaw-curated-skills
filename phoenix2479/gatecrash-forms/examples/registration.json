{
  "title": "Event Registration",
  "description": "Register for our upcoming workshop",
  "fields": [
    {
      "type": "text",
      "name": "full_name",
      "label": "Full Name",
      "required": true
    },
    {
      "type": "email",
      "name": "email",
      "label": "Email",
      "required": true
    },
    {
      "type": "text",
      "name": "company",
      "label": "Company/Organization"
    },
    {
      "type": "text",
      "name": "job_title",
      "label": "Job Title"
    },
    {
      "type": "radio",
      "name": "attendance",
      "label": "Attendance Mode",
      "options": [
        "In-person",
        "Virtual"
      ],
      "required": true
    },
    {
      "type": "checkbox",
      "name": "interests",
      "label": "Topics of Interest",
      "options": [
        "Web Development",
        "AI/ML",
        "Cloud Computing",
        "Cybersecurity",
        "DevOps"
      ]
    },
    {
      "type": "date",
      "name": "preferred_date",
      "label": "Preferred Date",
      "required": true
    },
    {
      "type": "textarea",
      "name": "dietary_restrictions",
      "label": "Dietary Restrictions (in-person only)",
      "placeholder": "Any allergies or preferences?"
    }
  ],
  "submit": {
    "email": "your-email@example.com",
    "storage": "responses/registrations.json"
  }
}
