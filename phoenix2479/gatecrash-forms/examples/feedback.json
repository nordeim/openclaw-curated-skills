{
  "title": "Customer Feedback Form",
  "description": "We'd love to hear your thoughts on our products and services!",
  "fields": [
    {
      "type": "scale",
      "name": "overall_rating",
      "label": "Overall satisfaction",
      "min": 1,
      "max": 5,
      "required": true
    },
    {
      "type": "checkbox",
      "name": "valuable_insights",
      "label": "What did you find most valuable?",
      "options": [
        "Product quality",
        "Customer service",
        "Value for money",
        "Social media presence",
        "Website experience"
      ]
    },
    {
      "type": "scale",
      "name": "quality_rating",
      "label": "How would you rate our product quality?",
      "min": 1,
      "max": 10,
      "required": true
    },
    {
      "type": "radio",
      "name": "recommend",
      "label": "Would you recommend us to others?",
      "options": [
        "Definitely yes",
        "Probably yes",
        "Not sure",
        "Probably no",
        "Definitely no"
      ],
      "required": true
    },
    {
      "type": "textarea",
      "name": "comments",
      "label": "Additional comments or suggestions",
      "placeholder": "Share your thoughts here...",
      "maxLength": 500
    },
    {
      "type": "email",
      "name": "email",
      "label": "Email (optional, for follow-up)",
      "placeholder": "your@email.com"
    }
  ],
  "submit": {
    "email": "your-email@example.com",
    "storage": "responses/feedback.json"
  }
}
