{
  "title": "Contact Us",
  "description": "Have a question? We'd love to hear from you!",
  "fields": [
    {
      "type": "text",
      "name": "name",
      "label": "Your Name",
      "required": true,
      "placeholder": "John Doe"
    },
    {
      "type": "email",
      "name": "email",
      "label": "Email Address",
      "required": true,
      "placeholder": "john@example.com"
    },
    {
      "type": "text",
      "name": "phone",
      "label": "Phone Number",
      "placeholder": "+91 98765 43210"
    },
    {
      "type": "select",
      "name": "subject",
      "label": "Subject",
      "options": [
        "General Inquiry",
        "Product Support",
        "Sales",
        "Partnership",
        "Feedback",
        "Other"
      ],
      "required": true
    },
    {
      "type": "textarea",
      "name": "message",
      "label": "Message",
      "required": true,
      "placeholder": "Tell us more about your inquiry...",
      "maxLength": 1000
    }
  ],
  "submit": {
    "email": "your-email@example.com",
    "storage": "responses/contact.json"
  }
}
